<Page x:Class="Стрельба_по_мишеням.GamePage2"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Стрельба_по_мишеням"
      mc:Ignorable="d"
      Title="GamePage2" Width="1036" Height="675">
    <Canvas Name="MyCanvas" MouseLeftButtonDown="CanvasClicking" Cursor="/resources/purple gun normal select.cur" Height="675" Width="1036">
        <Image Source="Resources/Backgroundd.PNG" Canvas.Left="-244"/>
        <Label x:Name="txtScore" Style="{DynamicResource CustomLabel}"  Content="Cчёт: 0" Canvas.Left="345" RenderTransformOrigin="0.097,0.527"/>
        <Label x:Name="txtLastScore" Style="{DynamicResource CustomLabel}" Content="Лучший счёт: 0" Foreground="Red" Canvas.Left="468"/>
        <Rectangle Name="healthBar" Stroke="Black" Fill="Red" Height="46" Width="350" Canvas.Left="676" Canvas.Top="10"/>
        <Button Name="But4" Style="{DynamicResource ButtonStyle}" Click="Exit" Content="Сохранить результат" Height="34" Width="194" Canvas.Left="146" Canvas.Top="4"/>
        <Button Name="But5" Style="{DynamicResource ButtonStyle}" Click="Exit_menu" Content="В меню" Height="34" Width="116" Canvas.Left="10" Canvas.Top="4"/>
    </Canvas>
</Page>
